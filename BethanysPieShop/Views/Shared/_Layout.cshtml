<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://kit.fontawesome.com/e0565afce8.js" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a>
      @await Component.InvokeAsync("CategoryMenu")
      @await Component.InvokeAsync("ShoppingCartSummary")
  </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">
                <img class="img-fluid" alt="Bethany's PieShop" src="~/Images/bethanylogo.png">
            </p>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>
</body>
</html>