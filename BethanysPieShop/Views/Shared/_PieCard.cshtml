@* Partial View *@
@using System.Globalization
@model Pie
<div class="card m-5 d-flex ">
    <img src="@Model.ImageThumbnailUrl" alt="">
    <div class="card-body">
        <h3 class="float-right">@Model.Price.ToString("c")</h3>
        <h3 class="card-title">
            <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a>
        </h3>
        <p class="card-text">@Model.Category.CategoryName</p>
        <p class="card-text">@Model.ShortDescription</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-pieId="@Model.PieId">Add to cart</a>
        </p>
    </div>
</div>